<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:background="@android:color/transparent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_155sdp"
        android:background="@drawable/white_bg"
        android:layout_marginRight="-2dp"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="1.8dp"
                android:background="@color/redColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.rey.material.widget.TextView
                        android:id="@+id/textview_cosst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center"
                        android:gravity="top"
                        android:text="$ 150"
                        android:textColor="@color/redColor"
                        android:textSize="@dimen/_19sdp" />

                    <ImageView
                        android:id="@+id/imagsdesdView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_6sdp"
                        android:src="@drawable/profile_img" />

                    <RatingBar
                        android:id="@+id/ratingBsdar"
                        android:layout_width="wrap_content"
                        style = "?android:attr/ratingBarStyleSmall"
                        android:layout_height="wrap_content"
                        android:rating="3"
                        android:numStars="5"
                        android:max="5"/>
                  <!--  android:progressTint="@color/gold"
                    android:progressBackgroundTint="@android:color/transparent"
                    android:secondaryProgressTint="@color/gold"-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="2"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textview_bxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/redColor"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/textvk_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Samson"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/textview_bootxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Damage Control"
                        android:textColor="@color/redColor"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/textview_bom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="No Damage, 2014 model"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/textview_book_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Truck"
                        android:textColor="@color/redColor"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/textview_bo_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heavy Load"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>


            </LinearLayout>


            <ImageView
                android:id="@+id/imageView_doubletick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:focusable="false"
                android:paddingLeft="@dimen/_9sdp"
                android:paddingRight="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:src="@mipmap/ic_tick_ico" />


        </FrameLayout>

    </LinearLayout>

</LinearLayout>
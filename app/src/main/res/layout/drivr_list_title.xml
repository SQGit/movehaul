<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:orientation="horizontal"
        android:background="@drawable/white_bg"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:background="@color/redColor"
            android:orientation="vertical">

            <com.rey.material.widget.TextView
                android:id="@+id/textview_title_bidding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_20sdp"
                android:focusable="false"
                android:gravity="right"
                android:text="$ 150"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />

            <RatingBar
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                style = "?android:attr/ratingBarStyleSmall"
                android:numStars ="5"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:rating = "3"
                android:stepSize="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:max="5"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sdp">


            <com.rey.material.widget.TextView
                android:id="@+id/textview_book_from_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Truck"
                android:textColor="@color/redColor"
                android:textSize="@dimen/_13sdp" />

            <com.rey.material.widget.TextView
                android:id="@+id/textview_title_truck_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingTop="@dimen/_1sdp"
                android:singleLine="true"
                android:text="Heavy Load"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            >


            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver"
                android:id="@+id/textview_book_from_ddtxt"
                android:textColor="@color/redColor"
                android:textSize="@dimen/_13sdp" />

            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_1sdp"
                android:id="@+id/textview_title_driver_name"
                android:maxLines="1"
                android:text="Samson"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
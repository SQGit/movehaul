<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:layout_collapseMode="parallax">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bottom_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#382F2F"
            android:gravity="center"
            android:orientation="horizontal">

            <com.rey.material.widget.Button
                android:id="@+id/btn_book_assistance"
                style="@style/Material.Drawable.Ripple.Touch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:text="Book Assistance"
                android:textAllCaps="false"
                android:textColor="@color/btn_bg_color"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/ss"
                    style="@style/Material.Drawable.Ripple.Touch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/redColor"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:text="Your Vehicle Type"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/layout_bt_car"
                    style="@style/Material.Drawable.Ripple.Wave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lt_bg_cg"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/filter_truck_4" />

                    <TextView
                        android:id="@+id/sds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_11sdp"
                        android:drawablePadding="@dimen/_8sdp"
                        android:text="Car"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/_16sdp" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/shadowColor" />


                <LinearLayout
                    android:id="@+id/layout_bt_truck"
                    style="@style/Material.Drawable.Ripple.Touch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lt_bg_cg"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_11sdp"
                    android:paddingTop="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/filter_truck_3" />

                    <TextView
                        android:id="@+id/text_book_nodw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="Truck"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/shadowColor" />

                <LinearLayout
                    android:id="@+id/layout_bt_bus"
                    style="@style/Material.Drawable.Ripple.Wave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lt_bg_cg"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bus_type" />

                    <TextView
                        android:id="@+id/ds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:text="Bus"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_tow_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sss"
                    style="@style/Material.Drawable.Ripple.Touch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/redColor"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:text="Wrecker Type"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />


                <LinearLayout
                    style="@style/Material.Drawable.Ripple.Touch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lt_bg_cg"
                    android:clickable="true"
                    android:id="@+id/layout_bt_tow"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_7sdp"
                    android:paddingTop="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/filter_truck_1" />

                    <TextView
                        android:id="@+id/text_book_nsodw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="Tow Vehicle"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/shadowColor" />


                <LinearLayout
                    style="@style/Material.Drawable.Ripple.Wave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lt_bg_cg"
                    android:clickable="true"
                    android:gravity="center"
                    android:id="@+id/layout_bt_flatbed"
                    android:paddingBottom="@dimen/_7sdp"
                    android:paddingTop="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/filter_truck_5" />

                    <TextView
                        android:id="@+id/sdss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_11sdp"
                        android:drawablePadding="@dimen/_8sdp"
                        android:text="FlatBed Vehicle"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/_16sdp" />

                </LinearLayout>


            </LinearLayout>

        </FrameLayout>


    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_gravity="top">
        <include
            layout="@layout/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </include>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_15sdp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login-OTP"
                android:textSize="@dimen/_19sdp"
                android:textColor="#F65F52"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <include
                layout="@layout/red_underline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </include>
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="@dimen/_20sdp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Your Message (Or)"
        android:textSize="@dimen/_14sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email for OTP Code"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_14sdp"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">
        <EditText
            android:layout_width="@dimen/_55sdp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_otp1"
            android:textSize="@dimen/_17sdp"
            android:maxLines="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusDown="@+id/edt_otp2"
            android:layout_margin="@dimen/_13sdp"/>
        <EditText
            android:layout_width="@dimen/_55sdp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_17sdp"
            android:maxLines="1"
            android:id="@+id/edt_otp2"
            android:gravity="center"
            android:nextFocusDown="@+id/edt_otp3"
            android:layout_gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:layout_margin="@dimen/_13sdp"/>
        <EditText
            android:layout_width="@dimen/_55sdp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_17sdp"
            android:maxLines="1"
            android:gravity="center"
            android:id="@+id/edt_otp3"
            android:nextFocusDown="@+id/edt_otp4"
            android:layout_gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:layout_margin="@dimen/_13sdp"/>
        <EditText
            android:layout_width="@dimen/_55sdp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_17sdp"
            android:maxLines="1"
            android:gravity="center"
            android:id="@+id/edt_otp4"
            android:layout_gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:layout_margin="@dimen/_13sdp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:textSize="@dimen/_14sdp"
            android:textColor="#F65F52"/>
        <com.rey.material.widget.Button
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_40sdp"
            style="@style/Material.Drawable.Ripple.Touch"
            android:background="@drawable/submit"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingRight="@dimen/_3sdp"
            android:textSize="@dimen/_16sdp"
            android:textAllCaps="false"
            android:id="@+id/btn_submit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <include
            layout="@layout/down_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </include>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_5sdp"
    android:visibility="gone"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_340sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="3">

            <View
                android:layout_width="2dp"
                android:layout_height="@dimen/_140sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/redColor" />


            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:background="@drawable/ring_bg" />


            <View
                android:layout_width="2dp"
                android:layout_height="@dimen/_140sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/redColor" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="-15dp"
            android:background="@drawable/white_bg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingTop="@dimen/_2sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_10sdp">


                <com.rey.material.widget.TextView
                    android:id="@+id/textview_content_booking_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:text="MOV34563IX"
                    android:textColor="@color/redColor"
                    android:textSize="@dimen/_14sdp" />

                <com.rey.material.widget.TextView
                    android:id="@+id/textview_content_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:focusable="false"
                    android:gravity="right"
                    android:text="150 naira"
                    android:textColor="@color/redColor"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:focusable="false"
                android:id="@+id/image_bg"
                android:src="@drawable/truck_ad" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:focusable="false">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/delivery_addr" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp">


                    <com.rey.material.widget.TextView
                        android:id="@+id/textview_content_pickup_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:text="@string/from_location"
                        android:textColor="@color/redColor"
                        android:textSize="@dimen/_10sdp" />

                    <com.rey.material.widget.TextView
                        android:id="@+id/textview_content_pickup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:maxLines="1"
                        android:paddingTop="@dimen/_1sdp"
                        android:singleLine="true"
                        android:text="#6, North Avenue, Abuja, Nigeria"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:focusable="false">

                <ImageView
                    android:id="@+id/imageViesw2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/goods_type" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp">


                    <com.rey.material.widget.TextView
                        android:id="@+id/textview_content_drop_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:text="@string/to_location"
                        android:textColor="@color/redColor"
                        android:textSize="@dimen/_10sdp" />

                    <com.rey.material.widget.TextView
                        android:id="@+id/textview_content_drop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:maxLines="1"
                        android:paddingTop="@dimen/_1sdp"
                        android:text="#977, West Boage, Dekina, Nigeria"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_1sdp"
                android:focusable="false">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageview_content_profile"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/profile_img" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp">


                    <com.rey.material.widget.TextView
                        android:id="@+id/textview_content_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:text="Stephen"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_13sdp" />

                    <com.rey.material.widget.TextView
                        android:id="@+id/textview_content_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:paddingTop="@dimen/_1sdp"
                        android:text="85635946656"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:focusable="false"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imagsdeView2"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_4sdp"
                        android:focusable="false"
                        android:src="@drawable/date_icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_10sdp">


                        <com.rey.material.widget.TextView
                            android:id="@+id/textview_content_date_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dates"
                            android:textColor="@color/redColor"
                            android:textSize="@dimen/_10sdp" />

                        <com.rey.material.widget.TextView
                            android:id="@+id/textview_content_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_1sdp"
                            android:text="05-10-2016"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_13sdp" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageViasdesw2"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_4sdp"
                        android:src="@drawable/time_icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_10sdp">


                        <com.rey.material.widget.TextView
                            android:id="@+id/textview_content_time_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/times"
                            android:textColor="@color/redColor"
                            android:textSize="@dimen/_10sdp" />

                        <com.rey.material.widget.TextView
                            android:id="@+id/textview_content_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_1sdp"
                            android:text="12.30 PM"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_13sdp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="@dimen/_20sdp"
                android:paddingTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/select_truck_type" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp">


                    <TextView
                        android:id="@+id/cr_delivery_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vehicle_types"
                        android:textColor="@color/redColor"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/cr_truck_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:maxLines="1"
                        android:text="Service vehicle"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/select_truck_type" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_no"
                            android:textColor="@color/redColor"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/cr_dr_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:maxLines="2"
                            android:layout_gravity="center"
                            android:text="KJA-193AA"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>


                </LinearLayout>




            </LinearLayout>


            <com.rey.material.widget.Button
                android:id="@+id/button_cancel"
                style="@style/Material.Drawable.Ripple.Touch"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/submit"
                android:gravity="center|center_horizontal"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingRight="@dimen/_3sdp"
                android:paddingTop="@dimen/_3sdp"
                android:text="@string/cancel_joba"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>